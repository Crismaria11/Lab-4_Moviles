        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InicioActivity">

    <ImageView
            android:layout_width="164dp"
            android:layout_height="144dp" app:srcCompat="@mipmap/perritos"
            android:id="@+id/imagenPerrito" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="110dp"
            android:layout_marginStart="110dp" android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toTopOf="@+id/textNombre"/>
    <TextView
            android:text="Cristina Bautista"
            android:layout_width="179dp"
            android:layout_height="35dp"
            android:id="@+id/textNombre" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp" android:layout_marginBottom="236dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>